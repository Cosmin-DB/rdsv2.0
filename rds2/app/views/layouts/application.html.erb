<!DOCTYPE html>
<html>
  <head>
			<link rel="stylesheet" href="/assets/stylesheets/bootstrap.min.css">
			<script src="/assets/javascripts/bootstrap.min.js"></script>



    <title>Rds</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="row">
	 			<div class="col-md-1" style="background-color:lavender;">Inicio
				</div>
	 			<div class="col-md-1" style="background-color:lavender;">Amigos
				</div>
	 			<div class="col-md-1" style="background-color:lavender;">Publicar
				</div>

   			<div class="col-md-8" style="background-color:lavender;">

					<div class="input-group">
					
						<%= form_tag search_persons_path, :method => :post do %>
 							 	<%= text_field_tag(:name_search , "",class: "form-control") %>
								<span class="input-group-btn">
									<%= button_tag(type: 'submit', class: "btn btn-default") do %>
									 <span class="glyphicon glyphicon-search"></span>
									<% end %>
								</span>
						<% end %>

				  </div>

				</div>
				<div class="col-md-1" style="background-color:lavender;">
				<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
				</div>
		</div>
	<div class="row">
  			<div class="col-md-3" style="background-color:lavenderblush;">
              <div class="row">
              	<div class="col-md-12"  style="background-color:lavender;">
										<%= render partial: "/box_info", object: @test %>
								</div>
              </div>
              <div class="row">
              	<div class="col-md-12"  style="background-color:lavender;">Notificaciones</div>
              </div>
            </div>
  			<div class="col-md-9"  style="background-color:lavender;"><%= yield %></div>
	</div>


  </body>
</html>
