<% @publications.each do |publication| %>
<div class="well well-lg ">
<div class="row " >
<div class="col-sm-12">
	<%= publication.text %>
</div>
</div>

<div class="row">
<div class="col-sm-1">
	<% if Share.find_by(user_id: current_user.id, publication_id: publication.id) %>
			<%=link_to(unshare_path(publication.id),method: :post,class: "btn btn-warning btn-sm") do%>
			<span class="glyphicon glyphicon-share-alt"></span> Unshare
			<%end%>
		<%else%>
			<%=link_to(share_path(publication.id),method: :post,class: "btn btn-info btn-sm") do%>
			<span class="glyphicon glyphicon-share-alt"></span> Share
			<%end%>
	<%end%>
</div>
<div class="col-sm-1">
	<%if Like.find_by(user_id: current_user.id, publication_id: publication.id)%>
			<%=link_to(dislike_path(publication.id),method: :post,class: "btn btn-warning btn-sm") do%>
			<span class="glyphicon glyphicon-thumbs-down"></span> unlike
			<%end%>
		<%else %>
			<%=link_to(like_path(publication.id),method: :post,class: "btn btn-info btn-sm") do%>
			<span class="glyphicon glyphicon-thumbs-up"></span> Like
			<%end%>
	<%end%>
</div>
<div class="col-sm-1">
	<% if current_user.role=="admin" %>
		<%= link_to publication_path(publication.id), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" do %>
			<span class="glyphicon glyphicon-remove"></span> Remove 
		<%end%>
	<%end%>
	</div>

	</div>

</div>

    <% end %>




