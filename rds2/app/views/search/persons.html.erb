<div class="well well-lg ">
<table class="table table-striped">
<caption><h2 class="text-primary">Persons</h2></caption>
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
		<td><%=link_to("Send Message",user_message_path("message",friend.id), method: "get")%></td>
		<td><%=
			if current_user.role=="admin"
				link_to("Delete",destroy_user_path(friend.id),method: :delete)
			end
			%></td>
      </tr>
    <% end %>

    <% @persons.each do |person| %>

      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
		<td><%=link_to("Send Message",user_message_path("message",person.id), method: "get")%></td>
		<td><%=link_to("Friendship request",user_message_path("friendship_request",person.id), method: "get")%></td>
		<td><%=
			if current_user.role=="admin"
				link_to("Delete",destroy_user_path(person.id),method: :delete)
			end
		%></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>